modules = ["nodejs-20", "python-3.11", "postgresql-16"]
[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "UI Dev Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend Server"

[[workflows.workflow]]
name = "UI Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace/ui && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Backend Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "redis-server --daemonize yes && cd /home/runner/workspace && python -m uvicorn src.main:app --host 0.0.0.0 --port 8000 --reload"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 6379
externalPort = 3001

[[ports]]
localPort = 8000
externalPort = 8000

[deployment]
deploymentTarget = "cloudrun"
build = ["bash", "-c", "cd ui && npm run build"]
publicDir = "ui/dist"
run = ["bash", "-c", "redis-server --daemonize yes && python -m uvicorn src.main:app --host 0.0.0.0 --port 5000"]

[nix]
channel = "stable-25_05"
packages = ["redis"]

[userenv]

[userenv.shared]
DELTALLM_SALT_KEY = "dev-salt-key-change-in-production"
DELTALLM_CONFIG_PATH = "config.yaml"
